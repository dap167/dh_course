<poem>
    <poemOne>
        <authorName>C. Valerius Catullus</authorName>
        <title>Poem 2</title>
        <author nameAuthor="catullus"/>
        <body>
            <line>
                <structure type="synchysis"><character name="sparrow">Passer,</character> deliciae
                    meae <character name="lesbia">puellae</character>,</structure>
            </line>
            <line>
                <character name="sparrow">quicum</character> ludere, <character name="sparrow"
                    >quem</character> in sinu tenere, </line>
            <line>
                <character name="sparrow">cui</character> primum digitum dare adpetenti </line>
            <line>et <structure type="chiasmus">acris <character name="lesbia">solet</character>
                    incitare morsus</structure>,</line>
            <line>cum <character name="catullus">desiderio</character> meo nitenti</line>
            <line>carum <character name="catullus">nescio</character> quid libet iocari</line>
            <line>et solaciolum sui doloris,</line>
            <line><character name="catullus">credo,</character> ut tum gravis <character
                    name="lesbia">adquiescat</character> ardor),</line>
            <line><character name="sparrow">tecum</character> ludere sicut <character name="lesbia"
                    >ipsa</character>
                <character name="catullus">possem</character></line>
            <line>et <structure type="chiasmus">tristis animi levare curas!</structure></line>
            <line><lineType kind="illegible text">...</lineType></line>
        </body>
    </poemOne>
    <poemTwo>
        <title>Poem 2B</title>
        <author nameAuthor="disputed"/>
        <body>
            <line>Tam gratum est <character name="author">mihi</character> quam ferunt <character
                    name="atalanta">puellae</character></line>
            <line>
                <structure>
                 pernici aureolum fuisse malum,
                </structure>
            </line>
            <line>
                <structure type="synchysis">quod zonam <character name="atalanta">solvit</character> diu
                    ligatam.</structure>
            </line>
        </body>
    </poemTwo>
</poem>
